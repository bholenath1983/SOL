    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Study Materials Dynamic Loader
        const materials = {
            ba: [
                {name: "BA Part I", url: "#"},
                {name: "BA Part II", url: "#"},
                {name: "BA Part III", url: "#"}
            ],
            bcom: [
                {name: "BCom Part I", url: "#"},
                {name: "BCom Part II", url: "#"},
                {name: "BCom Part III", url: "#"}
            ],
            ma: [
                {name: "MA English Part I", url: "https://drive.google.com/file/d/1La82mAXoGXpj71SmMXBKw1an1VjB7lAc/view"},
                {name: "MA Economics Part I", url: "https://drive.google.com/file/d/1FhfaR-01PKMzlGdGahM7OPgBcOWOzSdT/view"},
                {name: "MA History Part I", url: "https://drive.google.com/file/d/1BEAHPv-uNlZxgeQ8o-EeNqyHk5ec6I-5/view"}
            ],
            mcom: [
                {name: "MCom Part I", url: "#"},
                {name: "MCom Part II", url: "#"}
            ]
        };

        function loadMaterials(course) {
            const container = document.getElementById('materialLinks');
            container.innerHTML = materials[course].map(item => 
                `<a href="${item.url}" class="list-group-item list-group-item-action" target="_blank">${item.name}</a>`
            ).join('');
        }

        document.getElementById('courseSelect').addEventListener('change', (e) => {
            loadMaterials(e.target.value);
        });

        // Initialize with BA materials
        loadMaterials('ba');

        // Form Validation
        document.getElementById('idForm').addEventListener('submit', function(e) {
            const idInput = document.getElementById('studentId');
            if (!idInput.value.match(/^SOL\d{8}$/)) {
                alert('Please enter a valid SOL ID (format: SOL followed by 8 digits)');
                e.preventDefault();
            }
        });
    </script>
